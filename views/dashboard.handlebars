<div class="row">
    <a href="/ventes/new" class="button btn-primary">Créer une nouvelle vente</a></div>

<h1>Mes ventes</h1>
{{#each ventes}}
<div class="row form-group">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="row ">
                    <div class="col-lg-4 col-lg-offset-4 align-self-center">
                        Vente crée le {{this.createdAtFormat}}
                    </div>
                    <div class="col-lg-4 col-lg-offset-4 align-self-center">
                        Montant de la vente: {{this.montantTotal}}€
                    </div>
                    <div class="col-lg-4 col-lg-offset-4 align-self-center text-right">
                        <a href="/ventes/{{this.url}}" class="button btn-primary">Voir la vente</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}